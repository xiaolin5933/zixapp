#
# 协议描述：
#
从2012-10-01开始
包年12万， 按月进行财务确认



#
# 规则设置
#
规则组1 => {
    dir     => 1,  # 入金交易
    rules   => [
        {
            ack     => 2,   # 周期确认
            dir     => 2,   # 付银行手续费
            sect    => [
                {
                    begin   => 0,
                    end     => 999999999999999999,
                    mode    => 2,                     # 按定额
                    quota   => 1块,                   # 定额1块
                },
            ],
            ack_id  => 确认规则1,                     # 确认规则ID
        }
    ]
}


确认规则1 => {
    ack_period  => [
