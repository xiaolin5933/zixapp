#!/usr/bin/perl
use strict;
use warnings;
use Zeta::Run;
use ZAPP::YSPZ::Load;
use Getopt::Long;

use constant DEBUG => 1;

BEGIN {
    require Data::Dump if DEBUG;
}


my $path;
my $date;
my $batch;

my $rtn = GetOptions(
    "p|path=s"  => \$path,
    "d|date=s"  => \$date,
    "b|batch=s" => \$batch,
) or die &usage;

unless ($path) {
    die &usage;
}

unless ($date) {
    die &usage;
}

unless ($batch) {
    die &usage;
}

#
# 连接数据库
#
do "$ENV{ZIXAPP_HOME}/libexec/plugin.pl";

# 获取配置
my $cfg = zkernel->zapp_config();
my $dbh = $cfg->{zark}->{dbh};



# 构造凭证导入器
my $loader = ZAPP::YSPZ::Load->new(
    dbh     => $dbh,
    load    => $cfg->{load},
    batch   => $batch,
    zark    => $cfg->{zark},
    bip     => $cfg->{bip},
);

for my $file ( <$path/$date/*.src> ) {
    $file =~ /([^\/]+).src$/;
    warn "load yspz_$1 ...";
    unless ( $loader->handle( {type => $1, file => $file} ) ) {
        next; 
    }
}

sub usage {
    "usage:  ./load_yspz -p $ENV{ZIXAPP_HOME}/tmp -d 20130302 -b 500";
}


